{
  "private": true,
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.18.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/main.js",
    "dev": "cross-env NODE_ENV=development tsx watch src/main.ts",
    "build": "tsup --config tsup.config.ts src",
    "test": "vitest --watch false",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint ./src --diagnostic-level=error",
    "format": "biome format ./src --write --diagnostic-level=warn",
    "prepare": "husky"
  },
  "author": {
    "name": "David Wesley",
    "email": "contato.dwesley@outlook.com",
    "url": "https://github.com/DavidWesley"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@tsconfig/node-lts": "^22.0.2",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^24.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "zod": "^4.0.14"
  }
}
