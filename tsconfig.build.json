{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ESNext",
        "lib": [ "ESNext" ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "allowJs": true,
        "checkJs": true,
        "removeComments": true,
        "baseUrl": ".",
        "composite": false,
        "outDir": "dist",
        "paths": {
            "@/*": [ "./src/*" ]
        },
    },
    "include": [ "src" ],
    "exclude": [ "node_modules/*", "dist/*" ]
}